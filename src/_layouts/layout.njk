{%- set webfontUrl = '/assets/fonts/fonts.css' | url | cachebust -%}

<!doctype html>
<html lang="en-GB" class="kimPage" data-color-scheme="ada">
<head>

  {#- Technical metadata #}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <meta name="generator" content="{{ eleventy.generator }}">
  <link rel="alternate" type="application/atom+xml" title="{{ site.blogName }}" href="{{ '/feed.xml' | url }}">
  <link rel="me" href="https://chitter.xyz/@batbeeps">
  <link rel="me" href="https://twitter.com/batbeeps">
  <link rel="me" href="https://github.com/querkmachine">
  <link rel="webmention" href="https://webmention.io/beeps.website/webmention">
  <link rel="pingback" href="https://webmention.io/beeps.website/xmlrpc">
  
  {#- Page title #}
  {% set fullTitle %}
    {{- site.name -}}
    {%- for item in mastheadBreadcrumbs %} / {{ item.label | markdownInline | safe }}{% endfor -%}
    {%- if title %} / {{ title | markdownInline | safe }}{% endif -%}
  {% endset %}
  <title>{{ fullTitle | safe }}</title>
  
  {#- Stylesheets #}
  <link rel="stylesheet" href="{{ webfontUrl }}" media="print" onload="this.media='all'">
  <noscript><link rel="stylesheet" href="{{ webfontUrl }}"></noscript>
  <link rel="stylesheet" href="{{ '/assets/stylesheet.css' | url | cachebust }}" media="all">
  
  {#- Preload #}
  <link rel="preload" as="style" href="{{ webfontUrl }}">
  
  {#- SEO metadata #}
  <link rel="canonical" href="{{ site.domain }}{{ page.url }}">
  <meta property="og:locale" content="en_GB">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:site_name" content="beeps">
  <meta property="og:url" content="{{ site.domain }}{{ page.url | url }}">
  {%- if page.url | isBlogPost %}
    <meta property="og:type" content="article">
    <meta property="og:image" content="{{ site.domain }}{{ '/images/opengraph/' +  (date | formatDate('iso')) + '-' + (title | slugify) + '.png' | url }}">
  {%- else %}
    <meta property="og:type" content="website">
    <meta property="og:image" content="{{ site.domain }}{{ '/images/opengraph/default.png' | url }}">
  {%- endif %}
  {%- if description %}
    <meta name="description" content="{{ description }}">
    <meta property="og:description" content="{{ description }}">
  {%- endif %}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@batbeeps">
  <meta name="twitter:creator" content="@batbeeps">
  {%- if noRobots %}
    <meta name="robots" content="noindex, nofollow">
  {%- endif %}
  
  {#- Theming/icons #}
  <meta name="theme-color" content="#786999" media="(prefers-color-scheme: light)">
  <meta name="theme-color" content="#FFD447">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ '/favicon-32x32.png' | url | cachebust }}">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ '/favicon-16x16.png' | url | cachebust }}">
  <link rel="mask-icon" href="{{ '/safari-pinned-tab.svg' | url | cachebust }}" color="#FFD447">
  <link rel="apple-touch-icon" sizes="180x180" href="{{ '/apple-touch-icon.png' | url | cachebust }}">
  <link rel="manifest" href="{{ '/site.webmanifest' | url | cachebust }}">
  <link rel="shortcut icon" href="{{ '/favicon.ico' | url | cachebust }}">
  
  {#- Page-specific head content #}
  {% include "src/_includes/development-tag.njk" %}
  {% block head %}{% endblock %}
  
</head>
<body class="kimPage_body">

  <a class="kimSkiplink" href="#content">Skip to main content</a>
  
  {% block beforeMasthead %}{% endblock %}
  {% block masthead %}
    <header class="kimMasthead">
      <div class="kimWrapper kimMasthead_inner">
        <a class="kimMasthead_logo kimLink-plain" href="{{ '/' | url }}">{#
          #}<span class="kim-!-sr">Back to home</span>
          <span aria-hidden="true">{{ site.name }}</span>{#
        #}</a>
        {% for item in mastheadBreadcrumbs %}
          <span aria-hidden="true">&thinsp;/&thinsp;</span>
          <a class="kimLink-plain" href="{{ item.url | url }}">{{ item.label }}</a>
        {% endfor %}
      </div>
    </header>
  {% endblock %}
  {% block afterMasthead %}{% endblock %}

  <main id="content">
    {% block main %}{% endblock %}
  </main>
  
  {% block beforeFooter%}{% endblock %}
  {% block footer %}
    <footer class="kimFooter">
      {% block footerRobats %}
        <div class="kimRobatWars" role="presentation">
          <div class="kimRobatWars_inner">
          </div>
        </div>
      {% endblock %}
      <div class="kimWrapper kimFooter_inner">
        <div class="kimFooter_themeSwitch">
          {% include "src/_includes/color-scheme-switch.njk" %}
        </div>
        <small class="kimFooter_boilerplate">
          {% block boilerplate %}
            Made by <a class="kimLink-plain" href="{{ '/about/' | url }}">beeps</a> and <a class="kimLink-plain" href="{{ '/colophon/' | url }}">uncountable others</a>. Keep circulating the HTML.
          {% endblock %}
        </small>
      </div>
    </footer>
  {% endblock %}
  {% block afterFooter %}{% endblock %}

  {# Color scheme switcher JS #}
  <script src="{{ '/assets/javascript/colorScheme.js' | url | cachebust }}"></script>
  
  {# Other scripts #}
  {% block scripts %}{% endblock %}
  
</body>
</html>