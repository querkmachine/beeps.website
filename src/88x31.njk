---
eleventyExcludeFromCollections: true
---

<style>
@import url({{ "/assets/fonts/fonts.css" | url }});

:root {
  --width: 88px;
  --height: 31px;
  --inset: 2px;
  --color-text: #fff;
  --color-background: #2a2536;
  --color-accent: oklch(85.29% 0.323 142.82);
  --color-accent-alt: #786999;
}

* {
  /* margin: 0;
  padding: 0; */
  box-sizing: border-box;
  
}

*::before,
*::after {
  box-sizing: inherit;
}

img { image-rendering: pixelated; }

.wrapper {
  width: var(--width);
  height: var(--height);
  outline: 1px solid red;
  overflow: hidden;
}

.button {
  width: var(--width);
  height: var(--height);
  position: relative;
  border: 1px solid;
  border-top-color: rgba(255 255 255 / .2);
  border-left-color: rgba(255 255 255 / .2);
  border-right-color: rgba(0 0 0 / .4);
  border-bottom-color: rgba(0 0 0 / .4);
  color: var(--color-text);
  background-color: var(--color-background);
}
.button_name,
.button_scroll {
  position: absolute;
  left: var(--inset);
  font-family: "Space Mono", monospace;
  font-size: 8px;
  text-transform: uppercase;
  line-height: 1;
  text-shadow: 1px 1px 0 rgba(0 0 0 / .5);
}

.button_bg {
  --bg-size: 16px;
  --bg-half-size: calc(var(--bg-size) / 2);
  width: calc(var(--width) * 2);
  height: calc(var(--height) * 2);
  position: absolute;
  top: calc(var(--bg-size) * -2);
  right: calc(var(--bg-size) * -2);
  background-image:
    linear-gradient(45deg, var(--color-background) 25%, transparent 25%),
    linear-gradient(-45deg, var(--color-accent-alt) 25%, transparent 25%),
    linear-gradient(45deg, transparent 75%, var(--color-background) 75%),
    linear-gradient(-45deg, transparent 75%, var(--color-accent-alt) 75%);
  background-size:
    var(--bg-size) var(--bg-size);
  background-position:
    var(--bg-half-size) var(--bg-half-size), 
    calc(var(--bg-half-size) * -1) 0, 
    0 0, 
    0 var(--bg-half-size);
  background-clip: border-box;
  opacity: .4;
  animation-name: bg-scroll;
  animation-iteration-count: infinite;
  animation-duration: 1s;
  animation-timing-function: linear;
  animation-delay: -.5s;
}

@keyframes bg-scroll {
  0% { transform: translate(0, 0); }
  100% { transform: translate(-16px, 16px); }
}

.button_name {
  top: var(--inset);
  font-weight: 700;
  color: var(--color-accent);
}

.button_name span {
  animation-name: name-bounce;
  animation-duration: 1s;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}

.button_name span:nth-child(1) { animation-delay: 0ms; }
.button_name span:nth-child(2) { animation-delay: 125ms; }
.button_name span:nth-child(3) { animation-delay: 250ms; }
.button_name span:nth-child(4) { animation-delay: 375ms; }
.button_name span:nth-child(5) { animation-delay: 500ms; }
.button_name span:nth-child(6) { animation-delay: 625ms; }
.button_name span:nth-child(7) { animation-delay: 750ms; }

@keyframes name-bounce {
  0%, 40%, 100% { 
    color: var(--color-accent);
  }
  20% { 
    color: var(--color-text);
  }
}

.button_scroll {
  display: flex;
  flex-direction: column;
  bottom: var(--inset);
}

.button_scroll span {
  animation-name: feature-scroll;
  animation-iteration-count: infinite;
  animation-fill-mode: both;
  animation-duration: 3s;
}

@keyframes feature-scroll {
  0%, 79.999% { opacity: 0; }
  80%, 100% { opacity: 1; }
}

.button_scroll span:not(:first-child) { position: absolute; }

.button_scroll span:nth-child(1) { animation-delay: 0s; }
.button_scroll span:nth-child(2) { animation-delay: -1s; }
.button_scroll span:nth-child(3) { animation-delay: -2s; }
.button_scroll span:nth-child(4) { animation-delay: -3s; }

.button_critter {
  width: 37px;
  position: absolute;
  top: -17px;
  right: 3px;
  transform: rotateY(180deg);
}

</style>

<div class="wrapper">
  <div class="button">
    <div class="button_bg"></div>
    <div class="button_name">
      <div><span>b</span><span>e</span><span>e</span><span>p</span><span>s</span><span>&rsquo;</span></div>
      <div><span>w</span><span>e</span><span>b</span><span>s</span><span>i</span><span>t</span><span>e</span></div>
    </div>
    <div class="button_scroll">
      <span>Webdev</span>
      <span>Identity</span>
      <span>Nonsense</span>
    </div>
    <img class="button_critter" src="{{ '/assets/images/emy/flying.png' | url }}">
  </div>
</div>
