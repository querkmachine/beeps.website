{% block masthead %}{# Keep it simple, stupid. #}{% endblock %}
{% block footer %}{# Keep it really simple, stupid. #}{% endblock %}
{% block footerRobats %}{# Keep it incredibly simple, stupid. #}{% endblock %}

{% block head %}
<style>
  html {
    --color-background: black;
    --color-text: white;
  }
  
  body {
    background-image: url({{ '/assets/images/nebula.jpg' | url }});
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
  }
  
  .page-content {
    max-inline-size: 22em;
    margin-inline: auto;
    font-weight: 700;
    text-align: center;
    text-shadow: 0 0 .5em hsla(0 100% 0% / 70%);
  }
  
  #robatJail {
    display: inline-block;
    animation-name: robatSpin;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-duration: 47s;
    animation-delay: -5s;
    user-select: none;
    pointer-events: none;
  }
  #robat {
    height: 12.5rem;
    animation-name: robatBounce;
    animation-timing-function: ease-in-out;
    animation-iteration-count: infinite;
    animation-duration: 22s;
    animation-delay: -47s;
  }
  
  @keyframes robatSpin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(359deg); }
  }
  
  @keyframes robatBounce { 
    0%, 100% { transform: translate(-1rem, -1rem); }
    25% { transform: translate(1rem, 1rem); }
    50% { transform: translate(1rem, -1rem); }
    75% { transform: translate(-1rem, 1rem); }
  }
  
</style>
{% endblock %}