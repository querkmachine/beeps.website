{%- set googleFontsUrl = "https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;700&family=Space+Mono:ital@0;1&display=swap" -%}

<!doctype html>
<html lang="en-GB" class="kimPage">
<head>

  {#- Technical metadata #}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <meta name="generator" content="Eleventy">
  <link rel="alternate" type="application/atom+xml" title="Beeps' Blogs" href="{{ '/feed.xml' | url }}">
  <link rel="me" href="https://awoo.space/@batbeeps">
  
  {#- Page title #}
  <title>{% if title or metadata.title %}{{ title or metadata.title }} &larr; {% endif %}{{ siteName }}</title>
  
  {#- Preconnect #}
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
  {#- Stylesheets #}
  <link rel="stylesheet" href="{{ googleFontsUrl }}" media="print" onload="this.media='all'">
  <noscript><link rel="stylesheet" href="{{ googleFontsUrl }}"></noscript>
  <link rel="stylesheet" href="{{ '/assets/stylesheet.css' | url | cachebust }}" media="all">
  
  {#- Preload #}
  <link rel="preload" as="style" href="{{ googleFontsUrl }}">
  
  {#- SEO metadata #}
  <link rel="canonical" href="{{ siteDomain }}{{ page.url}}">
  <meta property="og:title" content="{{ title or metadata.title }}">
  <meta property="og:site_name" content="beeps">
  <meta property="og:url" content="{{ siteDomain }}{{ page.url | url }}">
  {%- if page.url | isBlogPost %}
    <meta property="og:type" content="article">
    <meta property="og:image" content="{{ siteDomain }}{{ '/images/opengraph/' +  (date | formatDate('iso')) + '-' + (title | slugify) + '.png' | url }}">
  {%- else %}
    <meta property="og:type" content="website">
    <meta property="og:image" content="{{ siteDomain }}{{ '/images/opengraph/default.png' | url }}">
  {%- endif %}
  <meta property="og:locale" content="en_GB">
  {%- if description or metadata.description %}
    <meta name="description" content="{{ description or metadata.description }}">
    <meta property="og:description" content="{{ description or metadata.description }}">
  {%- endif %}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@batbeeps">
  <meta name="twitter:creator" content="@batbeeps">
  {%- if noRobots %}
    <meta name="robots" content="noindex, nofollow">
  {%- endif %}
  
  {#- Theming/icons #}
  <meta name="theme-color" content="#ff0090" media="(prefers-color-scheme: dark)">
  <meta name="theme-color" content="#786999">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ '/favicon-32x32.png' | url | cachebust }}">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ '/favicon-16x16.png' | url | cachebust }}">
  <link rel="mask-icon" href="{{ '/safari-pinned-tab.svg' | url | cachebust }}" color="#786999">
  <link rel="apple-touch-icon" sizes="180x180" href="{{ '/apple-touch-icon.png' | url | cachebust }}">
  
  {#- Page-specific head content #}
  {% block head %}{% endblock %}
  
</head>
<body class="kimPage_body">

  <a class="kimSkiplink" href="#content">Skip to main content</a>
  
  {% block beforeMasthead %}{% endblock %}
  {% block masthead %}
    <header class="kimMasthead">
      <div class="kimWrapper kimMasthead_inner">
        <a class="kimMasthead_logo" href="{{ '/' | url }}">
          <span class="kim-!-sr">Back to home</span>
          <span aria-hidden="true">{{ siteName }}</span>
        </a>
        {% for item in mastheadBreadcrumbs %}
        &rarr; <a href="{{ item.url | url }}">{{ item.label }}</a>
        {% endfor %}
      </div>
    </header>
  {% endblock %}
  {% block afterMasthead %}{% endblock %}

  <main id="content">
    {% block main %}{% endblock %}
  </main>
  
  {% block beforeFooter%}{% endblock %}
  {% block footer %}
    <footer class="kimFooter">
      {% block footerRobats %}
        <div class="kimRobatWars" role="presentation">
          <div class="kimRobatWars_inner">
          </div>
        </div>
      {% endblock %}
      <div class="kimWrapper kimFooter_inner">
        <small class="kimFooter_boilerplate">
          {% block boilerplate %}
            Made by <a href="{{ '/about/' | url }}">beeps</a> and <a href="{{ '/colophon/' | url }}">uncountable others</a>. Keep circulating the HTML.
          {% endblock %}
        </small>
      </div>
    </footer>
  {% endblock %}
  {% block afterFooter %}{% endblock %}

  {% block scripts %}{% endblock %}
  
</body>
</html>